<%- include('header') %>
    <div class = "grid">
        <div class = "row"> 
            <h1 class = "col"><%= data.videos[id].title %> </h1>
            <video src="../<%= data.videos[id].video %>" controls></video>
            <div class = "col"><p><%= data.videos[id].description %> </p></div>
            
        </div>
        <h2>Tengd myndb√∂nd</h2>
        <hr class ="video-linebrake">
        <div class = "row">
            <% data.videos[id].related.forEach((videoID) => { %>
                <div class = "col col-4 col-12-sm video-card">
                    <a href="<%=videoID %> ">
                        <div class = "video-thumbnail">
                            <div class = "video-image">
                                <img src="../<%= data.videos[videoID-1].poster %>" alt="">
                            </div>
                            <div class = "video-timestamp"><%= locals.timeStamp(data.videos[videoID-1].duration) %> </div>
                        </div>
                        <div class = "video-info">
                            <h3 class = "video-name"><%= data.videos[videoID-1].title %> </h3>
                            <p class = "video-uploadtime"><%= locals.formatTime(data.videos[videoID-1].created) %> </p>

                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
<%- include('footer') %> 